<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_students">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*">
        <TableRow>

            <LinearLayout>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Code Class:" />

                <AutoCompleteTextView
                    android:id="@+id/codeClassStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textAutoComplete"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Code Student:" />

                <EditText
                    android:id="@+id/codeStudent"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Name:" />

                <EditText
                    android:id="@+id/studentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Birthday:" />

                <EditText
                    android:id="@+id/birthdayStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="click to choose date"
                    android:inputType="text"
                    android:onClick="chooseBirthdayStudent" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Sex" />

                <CheckBox
                    android:id="@+id/sexCheckboxStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male" />
            </LinearLayout>
        </TableRow>


        <TableRow>

            <LinearLayout>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Address:" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
            </LinearLayout>
        </TableRow>





        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow android:layout_weight="1">

                <Button
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:text="RESET"
                    android:background="@drawable/background_button"
                    android:id="@+id/resetStudent"/>

                <Button
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:text="UPDATE"
                    android:background="@drawable/background_button"
                    android:id="@+id/updateStudent"/>

            </TableRow>

            <TableRow android:layout_weight="1">

                <Button
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:text="INSERT"
                    android:background="@drawable/background_button"
                    android:id="@+id/insertStudent"/>

                <Button
                    android:layout_gravity="center"
                    android:padding="20dp"
                    android:text="REMOVE"
                    android:background="@drawable/background_button"
                    android:id="@+id/removeStudent"/>

            </TableRow>
            <TableRow android:layout_weight="1"/>


        </TableLayout>
    </TableLayout>
</android.support.design.widget.CoordinatorLayout>

