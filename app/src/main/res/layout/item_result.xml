<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="5dp"
    android:contextClickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    tools:targetApi="m">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/position_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="10dp"
                android:text="1" />

            <TextView
                android:id="@+id/code_subject_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_margin="10dp"
                android:text="Doanh Trại A"
                android:textAllCaps="true"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#000" />

            <TextView
                android:id="@+id/code_student_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"

                android:layout_margin="10dp"
                android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
                android:text="Doanh Trại A"
                android:textAllCaps="true"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="#634444" />

        </LinearLayout>

        <TextView
            android:id="@+id/average_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
            android:text="Doanh Trại A"
            android:textColor="#634444" />

        <TextView
            android:id="@+id/first_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Doanh Trại A"

            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="#634444" />

        <TextView
            android:id="@+id/second_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="10dp"

            android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
            android:text="Doanh Trại A"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="#634444" />

        <TextView
            android:id="@+id/final_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
            android:text="Doanh Trại A"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="#634444" />

        <TextView
            android:id="@+id/conduct_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
            android:text="Doanh Trại A"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="#634444" />

        <TextView
            android:id="@+id/note_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:layout_marginStart="@dimen/cardview_compat_inset_shadow"

            android:text="Doanh Trại A"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="#634444" />


    </LinearLayout>


</android.support.v7.widget.CardView>